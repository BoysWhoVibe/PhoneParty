# Example environment variables for the Mafia Game platform

# Database connection (required)
DATABASE_URL="postgresql://username:password@localhost:5432/mafia_game"

# Development mode settings (optional)
NODE_ENV="development"

# Debug features (set to 'true' to enable)
VITE_DEBUG_MODE="true"
VITE_ENABLE_TEST_PLAYERS="true"

# For production deployment, set these to 'false' or remove them:
# VITE_DEBUG_MODE="false"
# VITE_ENABLE_TEST_PLAYERS="false"